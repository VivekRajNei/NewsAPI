<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@color/prof_red" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
            <!--android:id="@+id/circular_profile_pic"-->
            <!--android:layout_width="156dp"-->
            <!--android:layout_height="156dp"-->
            <!--app:civ_border_width="4dp"-->
            <!--android:layout_marginTop="95dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--app:civ_border_color="@color/prof_red"/>-->
        <ImageView
            android:id="@+id/circular_profile_pic"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginTop="95dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VivekRajendran"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_dev_google"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_google_circle"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageView
                android:id="@+id/img_dev_fb"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:tint="@android:color/white"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:srcCompat="@drawable/ic_facebook_circle_color"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageView
                android:id="@+id/img_dev_twitter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_twitter"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageView
                android:id="@+id/img_dev_linkedin"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_linkedin_circle_color"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>