<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="5dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_news_main"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/com_facebook_button_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_item_news_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_item_news_main"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/img_item_news_provider"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/com_facebook_button_send_background"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_news_headline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_item_news_providername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello world welcome to newsAPI"
            app:layout_constraintBottom_toBottomOf="@+id/img_item_news_provider"
            app:layout_constraintRight_toLeftOf="@+id/imgbtn_item_news_addtofav"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_news_timepublished"
            app:layout_constraintLeft_toRightOf="@+id/img_item_news_provider"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/tv_item_news_timepublished"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="@+id/img_item_news_provider"
            app:layout_constraintRight_toLeftOf="@+id/imgbtn_item_news_addtofav"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/img_item_news_provider"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <ImageButton
            android:id="@+id/imgbtn_item_news_addtofav"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toLeftOf="@+id/imgbtn_item_news_share"
            app:srcCompat="@drawable/ic_bookmark_border_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_item_news_provider"
            app:layout_constraintTop_toTopOf="@+id/img_item_news_provider"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imgbtn_item_news_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toLeftOf="@+id/imgbtn_item_news_optionsmenu"
            app:srcCompat="@drawable/ic_menu_share"
            app:layout_constraintBottom_toBottomOf="@+id/img_item_news_provider"
            app:layout_constraintTop_toTopOf="@+id/img_item_news_provider" />

        <ImageButton
            android:id="@+id/imgbtn_item_news_optionsmenu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_item_news_provider"
            app:layout_constraintTop_toTopOf="@+id/img_item_news_provider" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
